<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h2>Add To Call List</h2>
				<%= form_for(@instagram_account) do |f|  %>
					<fieldset>
						<div class = "form-group">
							<%= f.label :username %>
							<%= f.text_field :username, class: "form-control" %>
						</div>

						<div class = "form-group">
							<%= f.submit(class: "btn btn-primary btn-md") %>
						</div>
					</fieldset>
				<% end %> 
		</div>
	</div>
</div>